<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chart_item_shape"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="检测仪器"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/shebei_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/chart_item_shape"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="电子式绝缘电阻表"
            android:textColor="#666666"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chart_item_shape"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="型    号"
            android:textColor="#666666"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/shebei_xinghao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/chart_item_shape"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="DM50C"
            android:textColor="#666666"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/chart_item_shape"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="编    号"
            android:textColor="#666666"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/shebei_bianhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/chart_item_shape"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="YYBDGY068"
            android:textColor="#666666"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/huanjing_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chart_item_shape"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="温度"
            android:textColor="#666666"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/chart_item_shape"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="   ℃"
            android:textColor="#666666"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chart_item_shape"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="相对湿度"
            android:textColor="#666666"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/chart_item_shape"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="   %"
            android:textColor="#666666"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chart_item_shape"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="大气压力"
            android:textColor="#666666"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/chart_item_shape"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="   kPa"
            android:textColor="#666666"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chart_item_shape"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="液温"
            android:textColor="#666666"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/chart_item_shape"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="   ℃"
            android:textColor="#666666"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chart_item_shape"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="参考温度K：75℃ "
            android:textColor="#666666"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/grid_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="20dp"
                android:textColor="#111"
                android:textSize="20sp"/>
            <GridLayout
                android:id="@+id/grid_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:paddingBottom="20dp"/>
            <TextView
                android:id="@+id/grid_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="高压连接线A相—BC相、地的冲击电压峰值（kV）："
                android:layout_marginLeft="20dp"
                android:textColor="#111"
                android:textSize="20sp"/>
            <GridLayout
                android:id="@+id/grid_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:paddingBottom="20dp"/>
            <TextView
                android:id="@+id/grid_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="高压连接线B相—AC相、地的冲击电压峰值（kV）："
                android:layout_marginLeft="20dp"
                android:textColor="#111"
                android:textSize="20sp"/>
            <GridLayout
                android:id="@+id/grid_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:paddingBottom="20dp"/>
            <TextView
                android:id="@+id/grid_title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="高压连接线C相—AB相、地的冲击电压峰值（kV）："
                android:layout_marginLeft="20dp"
                android:textColor="#111"
                android:textSize="20sp"/>
            <GridLayout
                android:id="@+id/grid_layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:paddingBottom="20dp"/>
            <TextView
                android:id="@+id/grid_title4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="低压连接线的冲击电压峰值（kV）："
                android:layout_marginLeft="20dp"
                android:textColor="#111"
                android:textSize="20sp"/>
            <GridLayout
                android:id="@+id/grid_layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:paddingBottom="20dp"/>
            <TextView
                android:id="@+id/grid_title5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="绝缘试验（空气绝缘爬电距离的验证）"
                android:layout_marginLeft="20dp"
                android:textColor="#111"
                android:textSize="20sp"/>
            <GridLayout
                android:id="@+id/grid_layout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:paddingBottom="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="结论"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:textColor="#111"
                            android:textSize="20sp" />
                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="10dp"
                            android:gravity="left"
                            android:orientation="horizontal">
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:checked="false"
                                android:text="合格" />
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:checked="true"
                                android:text="不合格" />
                        </RadioGroup>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="备注:"
                            android:textColor="#111"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/remark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:background="@null"
                            android:minHeight="50dp"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:background="@drawable/login_commit_shape"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="10dp"
                        android:paddingRight="30dp"
                        android:paddingBottom="10dp"
                        android:text="保存"
                        android:textColor="#111"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:background="@drawable/login_commit_shape"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="10dp"
                        android:paddingRight="30dp"
                        android:paddingBottom="10dp"
                        android:text="刷新"
                        android:textColor="#111"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/pic_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#111"
            android:textSize="20sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>



</LinearLayout>