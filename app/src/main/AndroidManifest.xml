<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.surface.resourcecenter">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_MEDIA_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon"
        android:supportsRtl="true"
        android:name=".HcApplication"
        android:theme="@style/SwipeBackTheme">
        <activity
            android:name=".ui.login.LoginActivity"
            android:configChanges="orientation|screenSize|orientation|keyboardHidden"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:label="@string/app_name">

        </activity>
        <activity android:name=".ui.home.HomeActivity"
            android:configChanges="orientation|screenSize">

        </activity>
        <activity android:name=".ui.BaseActivity"
            android:configChanges="orientation|screenSize"></activity>
        <activity android:name=".ui.swipeback.SwipeBackActivity"
            android:configChanges="orientation|screenSize"></activity>
        <activity android:name=".ui.aboutus.AboutActivity"
            android:configChanges="orientation|screenSize"></activity>
        <activity android:name=".ui.sample.SampleRecvActivity"
            android:configChanges="orientation|screenSize|orientation|keyboardHidden"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"></activity>
        <activity android:name=".ui.dispatch.DispatchTaskListActivity"
            android:configChanges="orientation|screenSize|orientation|keyboardHidden"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"></activity>
        <activity android:name=".ui.dispatch.DispatchTaskActivity"
            android:configChanges="orientation|screenSize"></activity>
        <activity android:name=".ui.shiyan.DoTaskActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.shiyan.NewTaskActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ui.usrManager.UsrManagerActivity"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".ui.device.GongQuManagerActivity"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".ui.device.GongQuDetailActivity"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".ui.device.DeviceManagerActivity"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".ui.chart.ChartManagerActivity"
            android:configChanges="orientation|screenSize">
        </activity>
    </application>

</manifest>